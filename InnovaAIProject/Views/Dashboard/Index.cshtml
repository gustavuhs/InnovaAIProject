@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InnovaHub - Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <script src="~/js/dashboard.js"></script>
    
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border: none;
            border-radius: 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .header-section {
            background-color: white;
            padding: 15px;
            margin-bottom: 20px;
        }
        .kpi-card {
            background-color: white;
            border-radius: 0;
            margin-bottom: 15px;
            padding: 10px;
        }
        .kpi-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: black;
        }
        .chart-container {
            background-color: white;
            padding: 20px;
            margin-bottom: 20px;
        }
        .score-chart-container {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 0 auto;
        }
        .score-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: black;
        }
        .score-value .value {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .score-value .max {
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-4">
        <div class="header-section">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h3 class="fw-bold mb-0">Painel de Inovação</h3>
                    <p class="text-muted mb-0">AVALIE O IMPACTO DE IDEIAS INOVADORAS</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex align-items-center justify-content-md-end">
                        <div class="me-3">
                            <i class="bi bi-lightbulb-fill me-1"></i>
                            <span class="fw-bold">IDEIAS TOTAIS</span>
                            <div>120 IDEIAS ENVIADAS</div>
                        </div>
                        <button class="btn btn-dark me-2" data-bs-toggle="modal" data-bs-target="#ideaSubmissionModal">Enviar Ideia</button>
                        <button class="btn btn-warning">Ranking</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="chart-container">
            <h4 class="mb-3">Avaliação Geral da Ideia</h4>
            <div class="row justify-content-around align-items-center">
                <div class="col-md-4 text-center mb-4">
                    <div class="score-chart-container mx-auto">
                        <canvas id="scoreChart" width="200" height="200"></canvas>
                        <div class="score-value">
                            <div class="value">8.7</div>
                            <div class="max">/10</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="d-flex justify-content-center align-items-center mb-2">
                        <h6>Ideias por mês</h6>
                    </div>
                    <div style="height: 300px;" class="d-flex justify-content-center">
                        <canvas id="monthlyChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-between">
            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Engajamento do Usuário</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">9.0</span>
                            <i class="bi bi-graph-up"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-briefcase-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Impacto da Ideia</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">7.5</span>
                            <i class="bi bi-clock"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-chat-square-dots-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Qualidade do Feedback</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">8.2</span>
                            <i class="bi bi-list-ul"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Taxa de Colaboração</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">7.9</span>
                            <i class="bi bi-graph-up"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-book-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Compartilhamento de Conhecimento</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">8.4</span>
                            <i class="bi bi-share"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="kpi-card d-flex align-items-center">
                    <div class="kpi-icon bg-warning rounded-circle me-3">
                        <i class="bi bi-arrow-clockwise"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Melhoria Contínua</h6>
                        <div class="d-flex align-items-center">
                            <span class="fs-5 fw-bold me-2">9.3</span>
                            <i class="bi bi-arrow-repeat"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>