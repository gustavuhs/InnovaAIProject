<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InnovaHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .menu-item {
            transition: all 0.3s ease;
        }

            .menu-item:hover {
                background-color: #f8f9fa;
                transform: translateX(3px);
            }

        .yellow-accent {
            background-color: #FFFF00;
        }

            .yellow-accent:hover {
                background-color: #E6E600;
            }

        .blue-accent {
            background-color: #1E40AF;
        }

            .blue-accent:hover {
                background-color: #1E3A8A;
            }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            @if (Context.Request.Path.ToString().ToLower() != "/login" &&
                        Context.Request.Path.ToString().ToLower() != "/login/index")
            {
                <div class="bg-white shadow-sm" style="width: 260px;">
                    <div class="p-3 border-bottom">
                        <div class="d-flex align-items-center gap-2">
                            <a href="@Url.Action("Index", "Home")" class="text-decoration-none text-reset d-flex align-items-center">
                                <i class="fas fa-lightbulb fs-4"></i>
                                <h1 class="fs-4 fw-bold m-0">InnovaHub</h1>
                            </a>
                        </div>
                    </div>

                    <nav class="mt-3">
                        <div class="px-3 py-2">
                            <a href="@Url.Action("Index", "Ranking")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Ranking" ? "yellow-accent" : "")">
                                    <i class="fas fa-trophy text-secondary"></i>
                                    <span>Ranking</span>
                                </div>
                            </a>
                        </div>

                        <div class="px-3 py-2">
                            <a href="@Url.Action("Index", "EnviarIdeia")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "EnviarIdeia" ? "yellow-accent" : "")">
                                    <i class="fas fa-paper-plane text-secondary"></i>
                                    <span>Enviar ideia</span>
                                </div>
                            </a>
                        </div>

                        <div class="px-3 py-2">
                            <a href="@Url.Action("", "")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Programas" ? "yellow-accent" : "")">
                                    <i class="fas fa-cogs text-secondary"></i>
                                    <span>Programas</span>
                                </div>
                            </a>
                        </div>

                        <div class="px-3 py-2">
                            <a href="@Url.Action("", "")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "yellow-accent" : "")">
                                    <i class="fas fa-tachometer-alt text-secondary"></i>
                                    <span>Dashboard</span>
                                </div>
                            </a>
                        </div>

                        <div class="mt-4 px-3">
                            <hr>
                            <h6 class="text-muted small mb-2">KPIs</h6>
                            <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "yellow-accent" : "")">
                                    <i class="fas fa-chart-line text-secondary"></i>
                                    <span class="small">Desempenho</span>
                                </div>
                            </a>
                            <a href="@Url.Action("", "")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Participacao" ? "yellow-accent" : "")">
                                    <i class="fas fa-users text-secondary"></i>
                                    <span class="small">Participação</span>
                                </div>
                            </a>
                            <a href="@Url.Action("", "")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Metricas" ? "yellow-accent" : "")">
                                    <i class="fas fa-chart-bar text-secondary"></i>
                                    <span class="small">Métricas</span>
                                </div>
                            </a>
                            <a href="@Url.Action("", "")" class="text-decoration-none text-reset">
                                <div class="d-flex align-items-center gap-2 p-2 rounded menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Notificacoes" ? "yellow-accent" : "")">
                                    <i class="fas fa-bell text-secondary"></i>
                                    <span class="small">Notificações</span>
                                </div>
                            </a>
                        </div>

                        <div class="mt-4 px-3">
                            <hr>
                            <a href="@Url.Action("Index", "Profile")" class="text-decoration-none text-reset">
                                <div class="p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "yellow-accent" : "") rounded">
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="~/assets/images/profile_avatar.png" alt="Profile" class="rounded-circle" width="40" height="40">
                                        <div>
                                            <div class="fw-medium">Gustavo Santos</div>
                                            <small class="text-decoration-underline">gustavo@gmail.com</small>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="mt-4 px-3">
                            <hr>
                            <div class="d-flex align-items-center gap-2 p-2 rounded hover-bg-light mt-2 menu-item">
                                <a class="text-decoration-none text-reset">
                                    <i class="fas fa-cog text-secondary"></i>
                                    <span>Configurações</span>
                                </a>
                            </div>
                            <div class="d-flex align-items-center gap-2 p-2 rounded menu-item">
                                <a class="text-decoration-none text-reset" href="@Url.Action("Index", "Login")" onclick="clearSession()">
                                    <i class="fas fa-sign-out-alt text-secondary"></i>
                                    <span>Sair</span>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            }

            <div class="@(Context.Request.Path.ToString().ToLower() == "/login" ||
                                                                                                                                                 Context.Request.Path.ToString().ToLower() == "/login/index" ? "col" : "col main-content")">
                @RenderBody()
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_EnviarIdeiaModal")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        function clearSession() {
            sessionStorage.clear();
            localStorage.clear();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>